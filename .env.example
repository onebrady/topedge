# Sonny's API Configuration
# eCommerce API (for customer purchases and orders)
SONNYS_ECOM_BASE=https://sandboxapi.mywashaccount.com/v1
SONNYS_ECOM_API_KEY=your-ecom-api-key-here
SONNYS_ECOM_API_ID=your-api-id-here

# BackOffice API (for customer account and billing data)
SONNYS_BACKOFFICE_BASE=https://sandboxapi.sonnyscontrols.com/v1
SONNYS_BACKOFFICE_API_KEY=your-backoffice-api-key-here
SONNYS_BACKOFFICE_API_ID=your-api-id-here

# Application URL (required for server-side API calls)
# In production: https://your-domain.vercel.app
# In development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Multi-site deployment (optional)
DEFAULT_SITE_CODE=MAIN

# Session security (IMPORTANT: Generate a secure random string of at least 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-here-min-32-chars-required
SESSION_COOKIE_NAME=sonnys_portal
SESSION_MAX_AGE=28800

# Node environment
NODE_ENV=development
